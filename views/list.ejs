<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%=Title%></h1>
    </div>

    <div class="box">
        <% taskList.forEach(function(list){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%=list._id%>" onChange="this.form.submit()">
                    <p><%=list.name%></p>
                </div>
                <input type="hidden" name="listName" value="<%=Title%>">
            </form>
        <% }) %>
        <form class="item" action="/" method="post">
            <input type="text" name="taskinput" placeholder="Enter Your Task!" autocomplete="off">
            <button type="submit" name="tasksubmit" value="<%=Title%>">+</button>
        </form>
    </div>
<%- include("footer") -%>